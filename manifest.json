{
  "name": "Barragee",
  "description" : "Barrage comments",
  "version": "1.0",
  "browser_action": {
    "default_popup": "source/html/hello.html",
    "default_icon": "source/images/hello_extensions.png"
  },
  "manifest_version": 2,
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      },
      "description": "Opens hello.html"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["source/js/content.js"],
      "run_at": "document_end"
    }
  ],
  "permissions":[
    "contextMenus", 
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
